-- Optimized UI library: compact, structured, no pairs/ipairs
local UIS = game:GetService("UserInputService")
function CreateMain(title)
	local gui, children = game.CoreGui, game.CoreGui:GetChildren()
	for i = 1, #children do if children[i].Name == title then children[i]:Destroy() end end
	local Rodus = Instance.new("ScreenGui", gui) Rodus.Name, Rodus.ZIndexBehavior = title, Enum.ZIndexBehavior.Sibling
	local Top = Instance.new("Frame", Rodus) Top.Name, Top.Size, Top.Position = "Top", UDim2.new(0,193,0,27), UDim2.new(0,15,0,15)
	Top.BackgroundColor3, Top.BackgroundTransparency, Top.BorderColor3, Top.BorderSizePixel = Color3.new(), .5, Color3.new(), 4
	local Title = Instance.new("TextLabel", Top) Title.Name, Title.Size, Title.Font, Title.Text = "Title", UDim2.new(0,193,0,27), Enum.Font.JosefinSans, " "..title
	Title.BackgroundColor3, Title.BackgroundTransparency, Title.TextColor3, Title.TextSize, Title.TextXAlignment = Color3.new(), .35, Color3.fromRGB(0,255,0), 14, Enum.TextXAlignment.Left
	local Container = Instance.new("Frame", Top) Container.Name, Container.Position, Container.Size = "Container", UDim2.new(0,0,1.3,0), UDim2.new(0,193,0,24)
	Container.BackgroundColor3, Container.BackgroundTransparency, Container.BorderColor3, Container.BorderSizePixel = Color3.new(), .5, Color3.new(), 4
	Instance.new("UIListLayout", Container).SortOrder = Enum.SortOrder.LayoutOrder
	local Minimize = Instance.new("TextButton", Top) Minimize.Name, Minimize.Size, Minimize.Position = "Minimize", UDim2.new(0,18,0,17), UDim2.new(.91,0,.18,0)
	Minimize.BackgroundTransparency, Minimize.Font, Minimize.Text, Minimize.TextColor3, Minimize.TextSize = 1, Enum.Font.SourceSans, "-", Color3.new(1,1,1), 14
	local toggled = false
	Minimize.MouseButton1Down:Connect(function() toggled = not toggled Minimize.Text, Container.Visible = toggled and "+" or "-", not toggled end)
	UIS.InputBegan:Connect(function(i) if i.KeyCode == Enum.KeyCode.RightControl then Top.Visible = not Top.Visible end end)
	tabs = Container
	function CreateTab(text)
		local Tab, Arrow = Instance.new("TextButton", Container), Instance.new("TextLabel")
		Tab.Name, Tab.Size, Tab.Font, Tab.Text = text, UDim2.new(0,193,0,24), Enum.Font.JosefinSans, " "..text
		Tab.BackgroundTransparency, Tab.TextColor3, Tab.TextSize, Tab.TextXAlignment = 1, Color3.new(1,1,1), 14, Enum.TextXAlignment.Left
		Arrow.Name, Arrow.Parent, Arrow.Size = "Arrow", Tab, UDim2.new(0,18,0,21)
		Arrow.BackgroundTransparency, Arrow.Font, Arrow.Text = 1, Enum.Font.SourceSans, ">>"
		Arrow.Position, Arrow.TextColor3, Arrow.TextScaled = UDim2.new(0.907,0,0,0), Color3.new(1,1,1), true
		local TabContainer = Instance.new("Frame", Tab) TabContainer.Name, TabContainer.Position, TabContainer.Visible = "TabContainer", UDim2.new(1.057,0,0,0), false
		TabContainer.Size, TabContainer.BackgroundColor3, TabContainer.BackgroundTransparency, TabContainer.BorderColor3, TabContainer.BorderSizePixel = UDim2.new(0,193,0,24), Color3.new(), .5, Color3.new(), 4
		Instance.new("UIListLayout", TabContainer).SortOrder = Enum.SortOrder.LayoutOrder
		Tab.MouseButton1Down:Connect(function()
			local desc = Container:GetDescendants()
			for i = 1, #desc do local d = desc[i] if d.Name == "TabContainer" then d.Visible = false d.Parent.TextColor3 = Color3.new(1,1,1) d.Parent.Arrow.TextColor3 = Color3.new(1,1,1) end end
			local active = not TabContainer.Visible
			TabContainer.Visible = active Tab.TextColor3 = active and Color3.fromRGB(0,255,0) or Color3.new(1,1,1) Tab.Arrow.TextColor3 = Tab.TextColor3
		end)
		local function updateSize(f) local l = f:FindFirstChildOfClass("UIListLayout") if l then f.Size = UDim2.new(0, l.AbsoluteContentSize.X, 0, l.AbsoluteContentSize.Y) end end
		local function CreateButton(p, txt, note, cb)
			local B, N = Instance.new("TextButton", p.TabContainer), Instance.new("TextLabel")
			B.Name, B.Size, B.Font, B.Text = txt, UDim2.new(0,193,0,24), Enum.Font.JosefinSans, " "..txt
			B.BackgroundTransparency, B.TextColor3, B.TextSize, B.TextXAlignment = 1, Color3.new(1,1,1), 14, Enum.TextXAlignment.Left
			B.MouseEnter:Connect(function() N.Visible = true end)
			B.MouseLeave:Connect(function() N.Visible = false end)
			B.MouseButton1Down:Connect(function() B.TextColor3 = Color3.fromRGB(0,255,0) task.wait(.05) B.TextColor3 = Color3.new(1,1,1) pcall(cb) end)
			N.Name, N.Parent, N.Position, N.Size = "Note", B, UDim2.new(1.041,0,0,0), UDim2.new(0,193,0,24)
			N.BackgroundTransparency, N.Font, N.Text, N.TextColor3, N.TextSize, N.TextXAlignment, N.Visible = 1, Enum.Font.JosefinSans, note, Color3.fromRGB(0,255,0), 14, Enum.TextXAlignment.Left, false
			updateSize(p.TabContainer)
		end
		local function CreateToggle(p, txt, default, cb)
			local T, state = Instance.new("TextButton", p.TabContainer), default
			T.Name, T.Size, T.Font, T.Text = txt, UDim2.new(0,193,0,24), Enum.Font.JosefinSans, " ["..(state and "x" or " ").."] "..txt
			T.BackgroundTransparency, T.TextColor3, T.TextSize, T.TextXAlignment = 1, Color3.new(1,1,1), 14, Enum.TextXAlignment.Left
			T.MouseButton1Down:Connect(function() state = not state T.Text = " ["..(state and "x" or " ").."] "..txt pcall(cb, state) end)
			updateSize(p.TabContainer)
		end
		local function CreateLabel(p, txt)
			local L = Instance.new("TextLabel", p.TabContainer)
			L.Name, L.Size, L.Font, L.Text = txt, UDim2.new(0,193,0,24), Enum.Font.JosefinSans, " "..txt
			L.BackgroundTransparency, L.TextColor3, L.TextSize, L.TextXAlignment = 1, Color3.fromRGB(0,255,0), 14, Enum.TextXAlignment.Left
			updateSize(p.TabContainer)
		end
		local function CreateTextBox(p, txt, cb)
			local B = Instance.new("TextBox", p.TabContainer)
			B.Name, B.Size, B.Font, B.Text = txt, UDim2.new(0,193,0,24), Enum.Font.JosefinSans, txt
			B.BackgroundTransparency, B.TextColor3, B.TextSize, B.TextXAlignment, B.ClearTextOnFocus = 1, Color3.new(1,1,1), 14, Enum.TextXAlignment.Left, true
			B.FocusLost:Connect(function(enter) if enter then pcall(cb, B.Text) end end)
			updateSize(p.TabContainer)
		end
		return {
			TabContainer = TabContainer,
			CreateButton = function(...) CreateButton(Tab, ...) end,
			CreateToggle = function(...) CreateToggle(Tab, ...) end,
			CreateLabel = function(...) CreateLabel(Tab, ...) end,
			CreateTextBox = function(...) CreateTextBox(Tab, ...) end
		}
	end
end
